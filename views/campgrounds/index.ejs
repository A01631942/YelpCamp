<%- include("../partials/header") %>

<div class="container mt-5">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i> Welcome to Yelp Camp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p></p>
            <a href="/campgrounds/new" class="btn btn-primary btn-md">New Campground</a>
        </div>
    </header>

<div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="mw-100" src="<%= campground.image %>" alt="">
                    <div class="card-body">
                        <h4 class="card-title"> <%= campground.name %></h4>
                      <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
                    </div>
                  </div>
            </div>
        <% }); %>    
    </div>   
</div>

<%- include("../partials/footer") %>
